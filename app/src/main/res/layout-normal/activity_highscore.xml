<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highscore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidprojects.greggy.funmath.Highscore">

    <LinearLayout
        android:id="@+id/lLayout_headerHighscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/DARKTEAL"
        >

        <TextView
            android:id="@+id/tv_BEST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEST"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="@color/WHITE"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_SCORE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORES"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="@color/WHITE"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rLayout_highscores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayout_headerHighscore"
        >

        <ImageView
            android:id="@+id/iv_borderHSadd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/TEAL"
            />

        <TextView
            android:id="@+id/tv_HSaddition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addition"
            android:textSize="20sp"
            android:textColor="@color/BLACK"
            android:layout_below="@+id/iv_borderHSadd"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/iv_borderHSsub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/TEAL"
            android:layout_below="@+id/tv_HSaddition"
            />
        <Button
            android:id="@+id/imgbtn_addHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bestscore"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="100"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_HSsubtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtraction"
            android:textSize="20sp"
            android:layout_below="@+id/iv_borderHSsub"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/BLACK"
            />

        <ImageView
            android:id="@+id/iv_borderHSmul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_HSsubtraction"
            android:background="@color/TEAL"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/imgbtn_subHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bestscore"
            android:layout_below="@+id/imgbtn_addHS"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:text="100"
            android:textSize="20sp"
            android:paddingBottom="20dp"
            />
        <TextView
            android:id="@+id/tv_HSmultiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="multiplication"
            android:textSize="20sp"
            android:textColor="@color/BLACK"
            android:layout_below="@+id/iv_borderHSmul"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:id="@+id/iv_borderHSend"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/TEAL"
            android:layout_below="@+id/tv_HSmultiplication"
            />
        <Button
            android:id="@+id/imgbtn_mulHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bestscore"
            android:layout_below="@id/imgbtn_subHS"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="100"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            />
    </RelativeLayout>



</RelativeLayout>
