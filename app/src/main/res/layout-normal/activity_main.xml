<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WHITE"
    tools:context="com.androidprojects.greggy.funmath.MainActivity">

    <RelativeLayout
        android:id="@+id/rLayout_Mainheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lLayout_MainHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/DARKTEAL"
        >

        <TextView
            android:id="@+id/tv_MainHeader_FUN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/HEADER_NAME_FUN"
            android:textSize="@dimen/main_activity_headertxtsize_FUN"
            android:gravity="center"
            android:layout_marginTop="@dimen/main_activity_headermargin_top"
            android:textColor="@color/WHITE"
            />

        <ImageView
            android:id="@+id/iv_MainHeader_LINE"
            android:layout_width="@dimen/main_activity_header_LINE_width"
            android:layout_height="@dimen/main_activity_header_LINE_height"
            android:background="@color/WHITE"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_MainHeader_MATH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/HEADER_NAME_MATH"
            android:textSize="@dimen/main_activity_headertxtsize_FUN"
            android:gravity="center"
            android:layout_marginBottom="@dimen/main_activity_headermargin_bottom"
            android:textColor="@color/WHITE"
            />
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
       <LinearLayout
           android:id="@+id/lLayout_icheader"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_below="@+id/lLayout_MainHeader"
           android:layout_marginTop="@dimen/main_activity_headermarginIC_bottom"
           >
           <ImageView
               android:id="@+id/ic_subHeader"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icsub_header"
               android:layout_marginRight="@dimen/main_activity_headermarginIC_right"
               />
           <ImageView
               android:id="@+id/ic_addHeader"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icadd_header"
               android:layout_marginRight="@dimen/main_activity_headermarginIC_right"
               />
           <ImageView
               android:id="@+id/ic_mulHeader"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icmul_header"
               android:layout_marginRight="@dimen/main_activity_headermarginIC_right"
               />

       </LinearLayout>


        </FrameLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rLayout_Mainbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:id="@+id/lLayout_btnbackground_startgame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_btnbackground_height"
            android:background="@color/TEAL"
            android:orientation="horizontal"
            >
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fLayout_btnbackground_startgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lLayout_btnbackground_startgame"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/main_activity_btnbackground_flayoutMarginTop"
            >
            <Button
                android:id="@+id/btn_startgame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_btn"
                android:text="@string/MAIN_BTN_STARTGAME"
                android:textColor="@color/BLACK"
                android:textSize="@dimen/main_activity_btntxt_size"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/main_activity_btnmargin_left"
                android:layout_marginRight="@dimen/main_activity_btnmargin_right"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginTop="@dimen/main_activity_btnbackground_marginTop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_btnbackground_lLayoutStartGame_height"
                    android:background="@color/TEAL"
                    >
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/lLayout_btnbackground_highscore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_btnbackground_lLayoutHighScore_height"
            android:background="@color/TEAL"
            android:orientation="horizontal"
            android:layout_below="@+id/fLayout_btnbackground_startgame"
            >
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fLayout_btnbackground_highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lLayout_btnbackground_highscore"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/main_activity_btnbackground_fLayoutHighScore_margintop"
            >
            <Button
            android:id="@+id/btn_highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MAIN_BTN_BESTSCORE"
            android:textSize="@dimen/main_activity_btntxt_size"
            android:textColor="@color/BLACK"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/main_activity_btnmargin_right"
            android:layout_marginLeft="@dimen/main_activity_btnmargin_left"
            android:background="@drawable/ic_btn"
            />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginTop="@dimen/main_activity_btnbackground_lLayoutHighScore_margintop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_btnbackground_layoutHeight"
                    android:background="@color/TEAL"
                    >
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/lLayout_btnbackground_tutorial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_btnbackground_lLayoutTutorial_height"
            android:background="@color/TEAL"
            android:orientation="horizontal"
            android:layout_below="@+id/fLayout_btnbackground_highscore"
            >
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fLayout_btnbackground_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fLayout_btnbackground_highscore"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MAIN_BTN_TUTORIAL"
                android:textColor="@color/BLACK"
                android:textAllCaps="false"
                android:textSize="@dimen/main_activity_btntxt_size"
                android:background="@drawable/ic_btn"
                android:layout_marginRight="@dimen/main_activity_btnmargin_right"
                android:layout_marginLeft="@dimen/main_activity_btnmargin_left"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="86dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_btnbackground_lLayoutTutorial_Endheight"
                    android:layout_marginTop="@dimen/main_activity_btnbackground_lLayoutTutorial_Endmargintop"
                    android:background="@color/TEAL">
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>
